<div class="container text-center justify-content-center">
  <br />
  <form
    id="addProduct"
    style="max-width: 600px; margin:auto; border-radius: 5px"
    class="border border-primary-subtle p-3"
  >
    <h2>Agregar Producto</h2>
    <div class="mb-3">
      <label for="title" class="form-label">Nombre</label>
      <input
        type="text"
        class="form-control"
        id="title"
        placeholder="Nombre del producto"
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Descipcion</label>
      <input
        type="text"
        class="form-control"
        id="description"
        placeholder="Descripcion del producto"
      />
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Precio</label>
      <input
        type="text"
        class="form-control"
        id="price"
        placeholder="Precio del producto"
      />
    </div>
    <div class="mb-3">
      <label for="thumbnail" class="form-label">Imagen</label>
      <input
        type="text"
        class="form-control"
        id="thumbnail"
        placeholder="Imagen del producto"
      />
    </div>
    <div class="mb-3">
      <label for="stock" class="form-label">Stock</label>
      <input
        type="text"
        class="form-control"
        id="stock"
        placeholder="Stock del producto"
      />
    </div>
    <div class="mb-3">
      <label for="code" class="form-label">Codigo</label>
      <input
        type="text"
        class="form-control"
        id="code"
        placeholder="Codigo del producto"
      />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">Categoria</label>
      <input
        type="text"
        class="form-control"
        id="category"
        placeholder="Categoria del producto"
      />
    </div>
    <button type="submit" class="btn btn-primary">Agregar Producto</button>
  </form>

  <table class="table table-dark table-striped m-5">
    <tr>
      <td>ID</td>
      <td>Nombre</td>
      <td>Descripcion</td>
      <td>Precio</td>
      <td>Foto</td>
      <td>Stock</td>
      <td>Code</td>
      <td>Status</td>
      <td>Categoria</td>
      <td></td>
    </tr>
    <tbody id="getProducts">

    </tbody>

  </table>

</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
