<div
  style="
        display: flex;
        height: 100vh;
        align-items: center;
        justify-content: center;
      "
>
  <form
    style="
          width: 500px;
          height: 500px;
          border: 1px solid #000;
          border-radius: 10px;
          display: flex;
          align-items: center;
          justify-content: center;
          flex-direction: column;
        "
    {{! action="/session/jwt" }}
    action="/session/login"
    method="post"
  >
    <h2>Iniciar sesion</h2>
    <label for="email" style="display: block"> Email</label>
    <input
      type="email"
      autocomplete="email"
      name="email"
      style="display: block; width: 240px"
    />
    <label for="password" style="display: block"> Contraseña</label>
    <input
      type="password"
      name="password"
      style="display: block; width: 240px"
    />
    <div style="display: flex">
      <button
        id="login"
        type="submit"
        class="btn btn-primary m-2"
        style="width: 110px; height: 40px"
      >
        Ingresar
      </button>
      <button
        id="registerOn"
        type="button"
        class="btn btn-danger m-2"
        style="width: 110px; height: 40px"
      >
        <a
          href="/session/register"
          style="text-decoration: none;color:white;"
        >Registrarse</a>

      </button>
    </div>
    <div style="display: flex">
      <a href="/session/github" style="margin-right: 10px;">Login with github
      </a>
      |
      <a
        href="/session/google"
        style="margin-left: 10px; margin-right:10px;"
      >Login with Google
      </a>
    </div>
    <div style="display: flex">
      <a href="/session/forget-password" style="margin-right: 10px;">Olvidé mi
        Contraseña
      </a>
    </div>
  </form>
</div>